<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaXamarin1.Views.ProfilePage"
             Title="Profile"
             Icon="user_profile">
    
    <ContentPage.Content>
        <StackLayout>
            <Image Source="blank_profile"
                   HorizontalOptions="Center"
                   HeightRequest="300"
                   WidthRequest="300"/>
            <Label Text="Change profile picture"
                   HorizontalOptions="Center"
                   TextColor="Blue"
                   FontAttributes="Bold"/>
            <Label Text="Name:"/>
            <Label Text="Email:"/>
            <Label Text="Member since:"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>