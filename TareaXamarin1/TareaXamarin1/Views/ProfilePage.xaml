<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaXamarin1.Views.ProfilePage"
             Title="Perfil"
             Icon="profile">
    
    <ContentPage.Content>
        <StackLayout>
            <Image Source="blank_profile"
                   HorizontalOptions="Center"
                   HeightRequest="300"
                   WidthRequest="300"/>
            <Label Text="Cambiar foto de perfil"
                   HorizontalOptions="Center"
                   TextColor="Blue"
                   FontAttributes="Bold"/>
            <Label Text="Nombre:"/>
            <Label Text="Email:"/>
            <Label Text="Miembro desde:"/>
            <Label Text="Logros:"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>